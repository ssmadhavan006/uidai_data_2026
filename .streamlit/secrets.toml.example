# Secrets template for Aadhaar Pulse
# Copy this file to secrets.toml and fill in values
# NEVER commit secrets.toml to version control!

[privacy]
# Cryptographic salt for hashing identifiers (generate with: python -c "import secrets; print(secrets.token_hex(32))")
hash_salt = "YOUR_64_CHAR_HEX_SALT_HERE"

[auth]
# Authentication credentials for dashboard
# Generate hashed passwords with: streamlit_authenticator.Hasher(['password']).generate()
cookie_name = "aadhaar_pulse_auth"
cookie_key = "YOUR_COOKIE_SIGNING_KEY"
cookie_expiry_days = 1

[credentials.usernames.analyst]
name = "Analyst User"
password = "$2b$12$HASHED_PASSWORD_HERE"
role = "Analyst"

[credentials.usernames.viewer]
name = "Viewer User"  
password = "$2b$12$HASHED_PASSWORD_HERE"
role = "Viewer"

[database]
# If using external database for audit logs
audit_log_path = "outputs/audit_logs/"
